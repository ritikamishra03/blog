
<%= form_with model:user do |form| %>
    <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    </div>

    <br>
    
    <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
    </div>
    
    <br>
    
    <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
    </div>

    <br>

    <div>
    <label>Gender</label>
    <%= form.radio_button :gender,'Male' %>Male<br>
    <%= form.radio_button :gender,'Female' %>Female<br>
    </div>
    <br>

    <div>
    <%= form.label :dob %>
    <%= form.date_field :dob %>
    </div>

    <br>
    
    <div>
    <%= form.label :city %>
    <%= form.select :city, {
        "europe"=>[["berlin","BE"],["madrid","MD"]],
        "America"=>[["Chicago","CHI"],["New york","NYK"]],
        "Asia"=>[["India","IND"],["Turkish","TRK"]],
    },
    selected:"CHI" %>
    <div>

    <br>

    <div>
    <%= form.label :time_zone %>
    <%= form.time_zone_select :time_zone %>
    </div>

    <br>

    <div>
    <%= form.submit "create" %>
    </div>

<% end %>


